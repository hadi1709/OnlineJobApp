                            <div class="sidebar-submenu">
                                <ul>
                                    <li>
                                        <a href="#">
                                            Quick Stat
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </li>
                        <li class="sidebar-dropdown">
                            <a href="#">
                                <i class="fa fa-shopping-bag"></i>
                                <span>Job Manager</span>
                            </a>
                            <div class="sidebar-submenu">
                                <ul>
                                    <li>
                                        <a href="~/Admin/NewJobOffer">
                                            Add New Job Offer
                                        </a>
                                    </li>
                                    <li>
                                        <a href="~/Admin/JobList">
                                            Job List
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </li>
                        <li>
                            <a href="#">
                                <i class="fa fa-calendar"></i>
                                <span>Calendar</span>
                            </a>
                        </li>
                        <li class="header-menu">
